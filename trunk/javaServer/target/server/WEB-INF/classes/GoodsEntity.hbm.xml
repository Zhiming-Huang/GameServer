<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.tian.server.entity.GoodsEntity" table="goods" schema="bdm25683027_db">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="type">
            <column name="type" sql-type="tinyint(4)" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="cmdName">
            <column name="cmdName" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="weight">
            <column name="weight" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="unit">
            <column name="unit" sql-type="varchar(64)" length="64" not-null="true"/>
        </property>
        <property name="value">
            <column name="value" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="material">
            <column name="material" sql-type="varchar(64)" length="64" not-null="true"/>
        </property>
        <property name="longDesc">
            <column name="longDesc" sql-type="varchar(2048)" length="2048" not-null="true"/>
        </property>
        <property name="resource">
            <column name="resource" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="pathName">
            <column name="pathName" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="stackable">
            <column name="stackable" sql-type="tinyint(1)" not-null="true"/>
        </property>
        <property name="deadline">
            <column name="deadline" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>